<a class="btn" href="/contacts/addContact">Add Contact</a>
<table id="contactsTable">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#noContacts}}
        <tr>
            <td colspan="6">No contacts loaded</td>
        </tr>
        {{/noContacts}}
        {{#contacts}}
        <tr>
            <td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{email}}</td>
            <td>{{phone}}</td>
            <td><a class="btn" href="/contacts/updateContact/{{id}}">update</a></td>
            <td><a class="btn" href="/contacts/deleteContact/{{id}}">delete</a></td>
        </tr>
        {{/contacts}}
    </tbody>
</table>